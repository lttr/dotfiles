{
  "permissions": {
    "allow": [
      "Bash(basename:*)",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(cp:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git remote:*)",
      "Bash(git rev-parse:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(npm:*)",
      "Bash(nr:*)",
      "Bash(pnpm:*)",
      "Bash(rg:*)",
      "Bash(test:*)",
      "Bash(touch:*)",
      "Bash(curl:*)",
      "Bash(gh --help)",
      "Bash(gh repo view:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh run view:*)",
      "Bash(gh run list:*)",
      "Bash(gh search:*)",
      "Bash(gh status:*)",
      "WebSearch"
    ],
    "deny": []
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/claude/hooks/context-agents-md.sh"
          }
        ]
      },
      {
        "matcher": "clear",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/claude/hooks/reset-timer-on-clear.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f .prettierrc ]; then file_path=$(jq -r '.tool_input.file_path'); case \"$file_path\" in *.js|*.jsx|*.ts|*.tsx|*.vue|*.svelte|*.json|*.css|*.scss|*.less|*.html|*.md|*.yaml|*.yml) pnpm exec prettier --write \"$file_path\" 2>/dev/null || true ;; esac; fi"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "node ~/dotfiles/claude/scripts/status-line.js",
    "padding": 0
  },
  "enabledPlugins": {
    "nuxt@lttr-claude-marketplace": true,
    "browser-tools@lttr-claude-marketplace": true,
    "video-to-article@lttr-claude-marketplace": true,
    "azure-devops@lttr-claude-marketplace": true
  },
  "outputStyle": "concise",
  "spinnerTipsEnabled": false
}
